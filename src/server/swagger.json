{
  "openapi": "3.0.0",
  "info": {
    "title": "API de uma Todo List",
    "deacription": "Essa API cria e busca listas de a fazeres para usuarios diferentes",
    "termsOfService": "Use com moderação",
    "contact": {
      "email": "joaoeduardo@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8000/",
      "deacription": "Api de produção"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "summary": "Criação de usuario",
        "description": "Essa rota será responsavel por criar um usuário",
        "tags": ["Users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "$ref": "#/components/schemas/User"
              },
              "example": {
                "name": "João eduardo",
                "email": "joaoeduardo@gmail.com",
                "password": "123"
              }
            }
          }
        },
        "responses": {
          "401": {
            "description": "Unauthorized"
          },
          "400": {
            "deacription": "Só pode adicionar os campos de name, email e passoword!"
          },
          "200": {
            "description": "ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "validação de usuario",
        "description": "Essa rota será responsavel por fazer o login do usuario",
        "tags": ["Login"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "$ref": "#/components/schemas/Login"
              },
              "example": {
                "email": "joaoeduardo@gmail.com",
                "password": "123"
              }
            }
          }
        },
        "responses": {
          "404": {
            "description": "Not_Fould"
          },
          "400": {
            "deacription": "Bad_Request"
          }
        }
      }
    },
    "/boards": {
      "post": {
        "summary": "Criação da board",
        "description": "Essa rota será responsavel por criar um Conteiner de tasks 'Board'",
        "tags": ["Board"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "boardName": {
                  "required": true,
                  "type": "string"
                }
              },
              "example": {
                "boardName": "Test"
              }
            }
          }
        },
        "responses": {
          "401": {
            "description": "Unauthorized"
          },
          "400": {
            "deacription": "Bad_Request"
          },
          "404": {
            "description": "Not_Fould"
          },
          "500": {
            "description": "Internal_Server_Error"
          },
          "201": {
            "description": "created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Board"
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Buasca todas as Board",
        "description": "Buasca todas as baord criadas pelo usuario",
        "tags": ["Board"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "400": {
            "description": "Bad_Request"
          },
          "404": {
            "description": "Not_Fould"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal_Server_Error"
          },
          "200": {
            "description": "ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "shemas": [{ "$ref": "#/components/schemas/Board" }]
                }
              }
            }
          }
        }
      }
    },
    "/boards/{boardId}": {
      "get": {
        "summary": "Busca uma board por id",
        "description": "Buasca uma baord criadas pelo usuario",
        "tags": ["Board"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "boardId",
            "in": "path",
            "description": "Buscar board por id",
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "Bad_Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not_Fould"
          },
          "500": {
            "description": "Internal_Server_Error"
          },
          "200": {
            "description": "ok",
            "content": {
              "application/json": {
                "type": "object",
                "boardName": {
                  "type": "string",
                  "required": true
                },
                "taskConnect": {
                  "type": "string"
                },
                "tasks": [
                  {
                    "$ref": "#/components/schemas/Task"
                  }
                ]
              }
            }
          }
        }
      }
    },
    "/tasks": {
      "post": {
        "summary": "Creação da task",
        "description": "Responsavel por criar uma tesk",
        "tags": ["Task"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "$ref": "#/components/schemas/Task"
              },
              "example": {
                "text": "Creat uma aplicação back and",
                "description": "criação",
                "status": "pending",
                "subTasks": [
                  {
                    "text": "apenas um test",
                    "concluded": true,
                    "uuid": "1234"
                  }
                ],
                "boardConnect": "1234"
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Bad_Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Bad_Request"
          },
          "500": {
            "description": "Internal_Server_Error"
          },
          "201": {
            "description": "created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "$ref": "#/components/schemas/Task"
                },
                "example": {
                  "text": "Creat uma aplicação back and",
                  "description": "criação",
                  "status": "pending",
                  "subTasks": [
                    {
                      "text": "apenas um test",
                      "concluded": true,
                      "uuid": "1234"
                    }
                  ],
                  "boardConnect": "1234"
                }
              }
            }
          }
        }
      }
    },
    "/tasks/{taskId}": {
      "get": {
        "summary": "Buasca uma Task",
        "description": "Buasca um Task por id",
        "parameters": [
          {
            "name": "taskId",
            "in": "path",
            "description": "Buscar task por id",
            "required": true
          }
        ],
        "security": [{ "bearerAuth": [] }],
        "tags": ["Task"],
        "responses": {
          "400": {
            "description": "Bad_Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not_Fould"
          },
          "500": {
            "description": "Internal_Server_Error"
          },
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "$ref": "#/components/schemas/Task"
                },
                "example": {
                  "text": "Creat uma aplicação back and",
                  "description": "criação",
                  "status": "pending",
                  "subTasks": [
                    {
                      "text": "apenas um test",
                      "concluded": true,
                      "uuid": "1234"
                    }
                  ],
                  "boardConnect": "1234"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Deleta uma Task",
        "description": "Deleta um Task por id",
        "parameters": [
          {
            "name": "taskId",
            "in": "path",
            "description": "Deleta task por id",
            "required": true
          }
        ],
        "security": [{ "bearerAuth": [] }],
        "tags": ["Task"],
        "responses": {
          "400": {
            "description": "Bad_Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not_Fould"
          },
          "500": {
            "description": "Internal_Server_Error"
          },
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "$ref": "#/components/schemas/Task"
                },
                "example": {
                  "text": "Creat uma aplicação back and",
                  "description": "criação",
                  "status": "pending",
                  "subTasks": [
                    {
                      "text": "apenas um test",
                      "concluded": true,
                      "uuid": "1234"
                    }
                  ],
                  "boardConnect": "1234"
                }
              }
            }
          }
        }
      },
      "patch": {
        "summary": "Atualiza toda a Task",
        "description": "Atualiza toda a Task por id",
        "parameters": [
          {
            "name": "taskId",
            "in": "path",
            "description": "Buscar task por id",
            "required": true
          }
        ],
        "security": [{ "bearerAuth": [] }],
        "tags": ["Task"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "$ref": "#/components/schemas/Task"
              },
              "example": {
                "text": "Um teste",
                "description": "Descrição de um test",
                "status": "pending",
                "subTasks": [
                  {
                    "text": "apenas um test",
                    "concluded": false,
                    "uuid": "1234"
                  }
                ],
                "boardConnect": "1234"
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Bad_Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not_Fould"
          },
          "500": {
            "description": "Internal_Server_Error"
          },
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "$ref": "#/components/schemas/Task"
                },
                "example": {
                  "text": "Creat uma aplicação back and",
                  "description": "criação",
                  "status": "pending",
                  "subTasks": [
                    {
                      "text": "apenas um test",
                      "concluded": true,
                      "uuid": "1234"
                    }
                  ],
                  "boardConnect": "1234"
                }
              }
            }
          }
        }
      }
    },
    "/tasks/{taskId}/status": {
      "patch": {
        "summary": "Atualiza os status da Task",
        "description": "Atualiza os status Task por id",
        "parameters": [
          {
            "name": "taskId",
            "in": "path",
            "description": "Atualiza os status Task por id",
            "required": true
          }
        ],
        "tags": ["Task"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "enum": ["concluded", "pending", "progress"],
                    "type": "string"
                  }
                }
              },
              "example": {
                "status": "concluided"
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Bad_Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not_Fould"
          },
          "500": {
            "description": "Internal_Server_Error"
          },
          "200": {
            "description": "ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "enum": ["concluded", "pending", "progress"],
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tasks/{subTaskId}/subtask": {
      "patch": {
        "summary": "Atualiza os subTask da Task",
        "description": "Atualiza toda a SubTask da Task por id",
        "security": [{ "bearerAuth": [] }],
        "tags": ["Task"],
        "parameters": [
          {
            "name": ":subTaskId",
            "in": "path",
            "description": "Adicione o id da task que deseja atualiza a subTask",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "properties": {
                  "type": "object",
                  "text": {
                    "type": "string"
                  },
                  "uuid": {
                    "type": "string"
                  },
                  "concluded": {
                    "type": "boolean"
                  }
                }
              },
              "example": [
                {
                  "text": "test",
                  "uuid": "123",
                  "concluded": false
                }
              ]
            }
          }
        },
        "responses": {
          "400": {
            "description": "Bad_Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not_Fould"
          },
          "500": {
            "description": "Internal_Server_Error"
          },
          "200": {
            "description": "ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Task"
                },
                "example": {
                  "text": "Creat uma aplicação back and",
                  "description": "criação",
                  "status": "pending",
                  "subTasks": [
                    {
                      "text": "apenas um test",
                      "concluded": true,
                      "uuid": "1234"
                    }
                  ],
                  "boardConnect": "1234"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "required": true
          },
          "email": {
            "type": "string",
            "required": true,
            "unique": true
          },
          "password": {
            "type": "string",
            "required": true
          }
        }
      },
      "Login": {
        "type": "object",
        "properties": {
          "password": {
            "required": true,
            "type": "string"
          },
          "email": {
            "required": true,
            "type": "string",
            "unique": true
          }
        }
      },
      "Board": {
        "type": "object",
        "properties": {
          "boardName": {
            "type": "string",
            "required": true
          },
          "taskConnect": {
            "type": "string",
            "default": "1234"
          },
          "userId": {
            "type": "object",
            "required": true
          }
        }
      },
      "Task": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string",
            "required": true
          },
          "description": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "progress", "concluded"],
            "default": "pending"
          },
          "subTasks": {
            "required": false,
            "type": "array",
            "item": {
              "type": "array",
              "text": {
                "required": true,
                "type": "string"
              },
              "concluded": {
                "type": "boolean",
                "default": false
              },
              "uuid": {
                "type": "string",
                "default": "1234"
              }
            }
          },
          "boardConnect": {
            "required": true,
            "type": "string",
            "ref": "Board"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
